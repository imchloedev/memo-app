{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es2017"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": "./src",
    "paths": {
      "~/*": ["./*"],
      "components/*": ["components/*"],
      "screens/*": ["screens/*"],
      "assets/*": ["assets/*"],
      "styles/*": ["styles/*"],
      "apis/*": ["apis/*"],
      "utils/*": ["utils/*"],
      "hooks/*": ["hooks/*"]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "styled.d.ts",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
