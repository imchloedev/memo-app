<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:editTextBackground">@drawable/rn_edit_text_material</item>
        <item name="android:textColor">#000000</item>
        <item name="colorAccent">#1e9f21</item>
        <!-- 기존 안드로이드 배경 투명하게 바꾸기  -->
        <item name="android:windowIsTranslucent">true</item> 
    </style>

    <!-- Light mode -->
    <style name="LightTheme" parent="AppTheme">
        <item name="textColor">#000000</item>
        <item name="colorAccent">#1e9f21</item>
        <item name="backgroundColor">#ffffff</item>
        <item name="launchImage">@drawable/light_splash</item>
    </style>

    <!-- Dark mode -->
    <style name="DarkTheme" parent="AppTheme">
        <item name="textColor">#ffffff</item>
        <item name="colorAccent">#1e9f21</item> 
        <item name="backgroundColor">#000000</item>
        <item name="launchImage">@drawable/dark_splash</item>
    </style>

</resources>


